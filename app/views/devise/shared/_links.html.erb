<div class="mt-6 space-y-4 text-center">
<% unless user_signed_in? %>
<%= link_to "Log in", new_session_path(resource_name), class: "text-blue-500 hover:underline" %>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-500 hover:underline" %>
<% end %>
<% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-blue-500 hover:underline" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>a
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-blue-500 hover:underline" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-blue-500 hover:underline" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), 
                    class: "bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-lg shadow", 
                    data: { turbo: false } %>
    <% end %>
  <% end %>
</div>
