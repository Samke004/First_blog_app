<h2 class="text-2xl font-bold text-center mb-6">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "bg-white shadow-md rounded-lg p-6 max-w-lg mx-auto" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- First Name -->
  <div class="mb-4">
    <%= f.label :first_name, class: "block text-gray-700 font-medium mb-2" %>
    <%= f.text_field :first_name, autofocus: true, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <!-- Last Name -->
  <div class="mb-4">
    <%= f.label :last_name, class: "block text-gray-700 font-medium mb-2" %>
    <%= f.text_field :last_name, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <!-- Email -->
  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700 font-medium mb-2" %>
    <%= f.email_field :email, autocomplete: "email", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <!-- Password -->
  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700 font-medium mb-2" %>
    <% if @minimum_password_length %>
      <em class="text-sm text-gray-500 mb-1 block">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <!-- Password Confirmation -->
  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block text-gray-700 font-medium mb-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <!-- Submit Button -->
  <div class="text-center">
    <%= f.submit "Sign up", class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
