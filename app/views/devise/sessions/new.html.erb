<h2 class="text-2xl font-bold text-center mb-6">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "bg-white shadow-md rounded-lg p-6 max-w-lg mx-auto" }) do |f| %>
  <!-- Email Field -->
  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700 font-medium mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <!-- Password Field -->
  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700 font-medium mb-2" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <!-- Remember Me Checkbox -->
  <% if devise_mapping.rememberable? %>
    <div class="mb-4 flex items-center">
      <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-500 border-gray-300 rounded focus:ring-blue-500" %>
      <%= f.label :remember_me, class: "ml-2 text-gray-700 font-medium" %>
    </div>
  <% end %>

  <!-- Submit Button -->
  <div class="text-center">
    <%= f.submit "Log in", class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
