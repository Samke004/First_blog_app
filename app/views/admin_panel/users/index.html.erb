<h1 class="text-2xl font-bold mb-6">Popis korisnika</h1>

<table class="min-w-full bg-white border border-gray-300 shadow-md rounded-lg">
  <thead>
    <tr class="bg-gray-200 text-gray-700">
      <th class="py-2 px-4 border">Ime</th>
      <th class="py-2 px-4 border">Email</th>
      <th class="py-2 px-4 border">Akcije</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="border-t">
        <td class="py-2 px-4 border"><%= user.first_name %> <%= user.last_name %></td>
        <td class="py-2 px-4 border"><%= user.email %></td>
        <td class="py-2 px-4 border space-x-2">
          <%= link_to "Detalji", admin_panel_user_path(user), class: "bg-blue-500 hover:bg-blue-600 text-white py-1 px-3 rounded" %>
          <%= button_to "Obriši", admin_panel_user_path(user), method: :delete, 
                        data: { turbo_confirm: "Jeste li sigurni da želite obrisati ovog korisnika?" }, 
                        class: "bg-red-500 hover:bg-red-600 text-white py-1 px-3 rounded" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-6">
<%= render 'kaminari/paginator', collection: @users %></div>
