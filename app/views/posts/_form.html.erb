<%= form_with model: @post, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, "Naslov" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :short_description, "Kratki opis" %>
    <%= form.text_area :short_description, class: "form-control", rows: 3 %>
  </div>

  <div class="form-group">
  <%= form.label :content, "SadrÅ¾aj" %>
  <%= form.text_area :content, data: { controller: "tinymce" }, class: "form-control" %>
  </div>


  <div class="form-group">
    <%= form.label :image, "Slika" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>


  <div class="form-group">
    <%= form.label :publication_date, "Datum objave" %>
    <%= form.datetime_field :publication_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.check_box :public %>
    <%= form.label :public, "Javna" %>
  </div>

  <div class="form-group">
    <%= form.check_box :published %>
    <%= form.label :published, "Objavljeno" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
