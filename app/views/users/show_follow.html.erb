<h1><%= @user.full_name %>'s Following</h1>

<% if @users.any? %>
  <ul>
    <% @users.each do |user| %>
      <li>
        <%= link_to user.full_name, user_path(user) %>
      </li>
    <% end %>
  </ul>

  <%= render partial: 'kaminari/paginator', locals: { collection: @users } %> <!-- Kaminari pagination -->
<% else %>
  <p>This user is not following anyone yet.</p>
<% end %>

