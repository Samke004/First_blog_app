<h1 class="text-2xl font-bold mb-4"><%= @title %></h1>

<ul class="space-y-4">
  <% @users.each do |user| %>
    <li class="p-4 bg-white shadow rounded-lg">
      <%= link_to user.name, user_path(user), class: "text-blue-500 hover:underline" %>
    </li>
  <% end %>
</ul>

<div class="mt-6">
  <%= will_paginate @users, class: "mt-4 flex justify-center" %>
</div>
